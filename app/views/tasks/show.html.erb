<!-- app/views/tasks/show.html.erb -->
<h1 class="mb-4"><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p>Status: <span class="badge bg-success">Completed</span></p>
<% else %>
  <p>Status: <span class="badge bg-warning">Incomplete</span></p>
<% end %>

<%= link_to 'Back to list', tasks_path, class: 'btn btn-secondary' %>
<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-warning' %>
<%= link_to 'Delete', task_path(@task), method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
