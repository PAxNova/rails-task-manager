<!-- app/views/tasks/index.html.erb -->
<h1 class="mb-4">Tasks</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Completed</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task), class: 'text-decoration-none' %></td>
        <td><%= task.details %></td>
        <td>
          <% if task.completed %>
            <i class="fas fa-check-circle text-success"></i>
          <% else %>
            <i class="far fa-circle text-danger"></i>
          <% end %>
        </td>
        <td>
          <%= link_to 'Show', task_path(task), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', task_path(task), method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
